<% include ../layout/header %>

<div class="container">
    <h1 style="text-align: center; margin-top: 10px">Edit <%= campground.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input type="text" class="form-control" value="<%= campground.name %>" name="campground[name]">
            </div>
            <div class="form-group">
                <input type="number" class="form-control" value="<%= campground.price %>" name="campground[price]" min="0.00" step="0.01">
            </div>
            <div class="form-group">
                <label for="image">New Image (optional)</label>
                <input type="file" id-"image" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" value="<%= campground.description %>" name="campground[description]">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit!</button>
            </div>
        </form>
    </div>
</div>

<% include ../layout/footer %>