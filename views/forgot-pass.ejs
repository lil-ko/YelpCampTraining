<% include layout/header %>

<div class="container">
    <h1 style="text-align: center; margin-top: 10px">Forgot Password</h1>
    <div style="width: 30%; margin: 30px auto;">
        <p>Enter your user email and we'll send a link to enable you to reset your password</p>
        <form action="/forgot" method="POST">
            <div class="form-group">   
                <input class="form-control" type="email" name="email" placeholder="E-mail" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" required>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds" >Go back</a>
    </div>
</div>    


